@model IEnumerable<NieGumex.Models.Facture>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FactureName)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FactureName)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FactureID }) |            
            @Html.ActionLink("Szczegoly", "Details", new { id = item.FactureID }, new { @class = "btn btn-default" })            
            @Html.ActionLink("Delete", "Delete", new { id=item.FactureID })
        </td>
    </tr>
}

</table>

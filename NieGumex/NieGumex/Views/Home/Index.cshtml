
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_wyglad.cshtml";
}

<section class="services wrapper">
    <ul class="clearfix">
        <li class="animated wow fadeInDown">
            <img class="icon" src="@Url.Content("~/Content/Wyglad/")img/icon1.png" alt="" />
            <span class="separator"></span>
            <h2>Opony</h2>
            <p>
                Specjalizujemy się w sprzedaży najlepszych opon na rynku bla bla bla
            </p>
        </li>
        <li class="animated wow fadeInDown" data-wow-delay=".2s">
            <img class="icon" src="@Url.Content("~/Content/Wyglad/")img/icon2.png" alt="" />
            <span class="separator"></span>
            <h2>Wyważanie</h2>
            <p>Oferujemy usługi wyważania opon bla bla bla</p>
        </li>
        <li class="animated wow fadeInDown" data-wow-delay=".4s">
            <img class="icon" src="@Url.Content("~/Content/Wyglad/")img/icon3.png" alt="" />
            <span class="separator"></span>
            <h2>Ustawianie zbieżnośći</h2>
            <p>Oferujmy usługi ustawiania zbieżności kół</p>
        </li>
    </ul>
</section>

<section class="video">
    <img style="visibility: visible; animation-name: fadeInDown;" src="img/video_logo.png" alt="" class="video_logo animated wow fadeInDown animated">
    <h3 style="visibility: visible; animation-name: fadeInDown;" class="animated wow fadeInDown animated">Kim jesteśmy i co robimy</h3>
    <a style="visibility: visible; animation-duration: 2s; animation-name: flipInX;" href="https://www.youtube.com/watch?v=693AZ3Oudvw" id="play_btn" class="fancybox animated wow flipInX animated" data-wow-duration="2s"></a>
</section>


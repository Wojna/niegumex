@model IEnumerable<NieGumex.Models.Products>

@{
    ViewBag.Title = "Index";
}

<h2>Lista produktów</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LiczbaKompletow)
        </th>
        <th>
            Wybierz se cos
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LiczbaKompletow)
        </td>
        <td>
            <input type="checkbox" />
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductID })
        </td>

    </tr>
}
    

</table>
<div>    
    <input class="btn btn-default" value="Kup" onclick="location.href='@Url.Action("Cart", "Product")'" />    
</div>
